@page "/counter"
@using Elite

<MudContainer MaxWidth="MaxWidth.False">
    <MudText Typo="Typo.h3" GutterBottom="true">Counter</MudText>
    <MudText Class="mb-4">Current count: @currentCount</MudText>
    <MudButton Color="Color.Primary" Variant="Variant.Filled" OnClick="IncrementCount">Click me</MudButton>

    <MudText Typo="Typo.h3" GutterBottom="true">Elite Dangerous Dashboard</MudText>
    <MudText Class="mb-8">Welcome to your new app, powered by MudBlazor!</MudText>
    <MudAlert Severity="Severity.Normal" Variant="Variant.Filled" Class="ma-2" Elevation="4">You can find documentation and examples on our website here: <MudLink Href="https://mudblazor.com" Typo="Typo.body2" Color="Color.Secondary"><b>www.mudblazor.com</b></MudLink></MudAlert>

    <MudAlert Severity="Severity.Info" Variant="Variant.Filled" Class="ma-2" Elevation="4">
        @Message
    </MudAlert>

    <MudCard Class="ma-2" Elevation="4">
        <MudCardContent>
            <MudButton class="ma-1" Variant="Variant.Filled" Color="Color.Primary" OnClick="ZoomIn">Zoom In</MudButton>
            <MudButton class="ma-1" Variant="Variant.Filled" Color="Color.Primary" OnClick="ZoomOut">Zoom Out</MudButton>
            <MudButton class="ma-1" Variant="Variant.Filled" Color="Color.Primary" OnClick="Center">Center</MudButton>
            <MudButton class="ma-1" Variant="Variant.Filled" Color="Color.Primary" OnClick="Close">Close</MudButton>
            <MudButton class="ma-1" Variant="Variant.Filled" Color="Color.Primary" OnClick="Minimize">Minimize</MudButton>
            <MudButton class="ma-1" Variant="Variant.Filled" Color="Color.Primary" OnClick="Maximize">Maximize</MudButton>
            <MudButton class="ma-1" Variant="Variant.Filled" Color="Color.Primary" OnClick="SetContextMenuEnabled">Context Menu</MudButton>
            <MudButton class="ma-1" Variant="Variant.Filled" Color="Color.Primary" OnClick="SetDevToolsEnabled">Dev Tools</MudButton>
            <MudButton class="ma-1" Variant="Variant.Filled" Color="Color.Primary" OnClick="SetGrantBrowserPermissions">Browser Permissions</MudButton>
            <MudButton class="ma-1" Variant="Variant.Filled" Color="Color.Primary" OnClick="SetIconFile">Icon</MudButton>
            <MudButton class="ma-1" Variant="Variant.Filled" Color="Color.Primary" OnClick="SetPosition">Position</MudButton>
            <MudButton class="ma-1" Variant="Variant.Filled" Color="Color.Primary" OnClick="SetResizable">Resizable</MudButton>
            <MudButton class="ma-1" Variant="Variant.Filled" Color="Color.Primary" OnClick="SetSizeUp">Size Up</MudButton>
            <MudButton class="ma-1" Variant="Variant.Filled" Color="Color.Primary" OnClick="SetSizeDown">Size Down</MudButton>
            <MudButton class="ma-1" Variant="Variant.Filled" Color="Color.Primary" OnClick="SetTitle">Title</MudButton>
            <MudButton class="ma-1" Variant="Variant.Filled" Color="Color.Primary" OnClick="SetTopmost">Topmost</MudButton>
            <MudButton class="ma-1" Variant="Variant.Filled" Color="Color.Primary" OnClick="SetFullScreen">Kiosk</MudButton>
            <MudButton class="ma-1" Variant="Variant.Filled" Color="Color.Primary" OnClick="ShowState">Show State</MudButton>
            <MudButton class="ma-1" Variant="Variant.Filled" Color="Color.Primary" OnClick="FullScreen">Full Screen</MudButton>

        </MudCardContent>
    </MudCard>

</MudContainer>

